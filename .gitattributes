# Normalize line endings for text files to LF in repo
* text=auto eol=lf

# Force LF for PHP and common text files
*.php text eol=lf
*.md text eol=lf
*.neon text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Export-ignore development-only files when creating archives
/.github export-ignore
/tests export-ignore
/.editorconfig export-ignore
/phpunit.xml export-ignore
/phpstan.neon export-ignore
/phpcs.xml export-ignore
